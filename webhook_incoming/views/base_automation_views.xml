<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="webhook_incoming_view_automation_form" model="ir.ui.view">
        <field name="name">webhook.incoming.view.automation.form</field>
        <field name="model">base.automation</field>
        <field name="inherit_id" ref="base_automation.view_base_automation_form" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='record_getter']/parent::group" position="inside">
                <field name="allow_creation" invisible="trigger != 'on_webhook'" />
            </xpath>
            <field name="log_webhook_calls" position="after">
                <field name="delay_execution" widget="boolean_toggle" />
            </field>
             <xpath expr="//page[@name='actions']" position="after">
            <page string="Record Creation Code" invisible="trigger != 'on_webhook'">
                <field
                        name="create_record_code"
                        nolabel="1"
                        widget="code"
                        options="{'mode': 'python'}"
                    />
            </page>
             </xpath>
        </field>
    </record>
</odoo>
